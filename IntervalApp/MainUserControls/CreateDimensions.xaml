<UserControl x:Class="IntervalApp.MainUserControls.CreateDimensions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntervalApp.MainUserControls"
             xmlns:local2="clr-namespace:IntervalApp.AccessoryUserControls"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <StackPanel>
        <Label>New dimension</Label>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label>Name</Label>
            <TextBox Name="TxtTableName" Width="464"/>
        </StackPanel>
        <Label>Columns</Label>
        <StackPanel Name="ColumnsContainer"/>
        <Button x:Name="BtnAddColumn" Margin="0,0,949,0" Content="Add" Click="BtnAddColumn_Click"/>
        <Button x:Name="BtnCreate" Content="Create" Click="BtnCreate_Click"/>
        <Button x:Name="BtnBack" Content="Back" Click="BtnBack_Click"/>
        <TextBox x:Name="TmpTxt" Height="114"/>
    </StackPanel>
</UserControl>
